// 代码块
class Person{
	public Person(){
		System.out.println("【构造方法】Person类构造方法执行");
	}
	{  // 2.构造块
		System.out.println("【构造块】Person构造块执行");
	}
}


public class JavaDemo9 {	
	public static void main(String args[]){
	

		{  // 1. 普通代码块
			int x = 10;
			System.out.println("x :" + x);
		}
		
		int x = 100;   // 全局变量
		System.out.print("x :" + x);
		
	}

}
